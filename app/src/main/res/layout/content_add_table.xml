<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddTableActivity"
    tools:showIn="@layout/activity_add_table">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Table"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <fragment
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/fragment_input"
        android:name="com.example.brice.spaghettify.FragmentTableInput"
        android:layout_marginTop="10dp"></fragment>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/fragment_add"
        android:name="com.example.brice.spaghettify.FragmentTableAdd"
        android:layout_marginTop="20dp"></fragment>
</LinearLayout>